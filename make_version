#!/bin/sh

IBP_VERSION="ibp_server(no FIFO): v1.2.3p0"
GCC_VERSION="Compiler: `gcc --version | head -n 1`"
CFLAGS="Compile flags: $@"
HOST="Build Host: `uname -n`"
OS="Build OS: `uname -rvm`"
BUILD_DATE="Build Date: `date`"

VFILE=server_version.c


cat << EOF > ${VFILE}

//*** Do not edit ****
//*** Automatically generated by make_version ***
 
const char *vstr = "${IBP_VERSION}\n"
             "${BUILD_DATE}\n"
             "${GCC_VERSION}\n"
             "${CFLAGS}\n"
             "${HOST}\n"
             "${OS}\n";        

const char *server_version() {
    return(vstr);
}

EOF

   

